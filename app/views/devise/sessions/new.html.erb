<div class="container my-5 px-5" style="max-width:700px;" >
  <h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, wrapper_html: {class: 'form-a'} %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, wrapper_html: {class: 'form-a'}  %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-a' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
