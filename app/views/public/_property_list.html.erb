
  <!--/ Property Star /-->
  <section class="section-property section-t8">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="title-wrap d-flex justify-content-between">
            <div class="title-box">
              <h2 class="title-a">Latest Properties</h2>
            </div>
            <div class="title-link">
            <%= link_to "All Property", properties_path %>
                <span class="ion-ios-arrow-forward"></span>
            
            </div>
          </div>
        </div>
      </div>
      <div id="property-carousel" class="owl-carousel owl-theme">
      <% @properties.each do |p| %>
        <div class="carousel-item-b">
          <div class="card-box-a card-shadow">
            <div class="img-box-a">
              <img src=" <%= url_for(p.images[0]) %> " alt="" class="img-a img-fluid">
            </div>
            <div class="card-overlay">
              <div class="card-overlay-a-content">
                <div class="card-header-a">
                  <h2 class="card-title-a">
                    <%= link_to property_path(p) do %>
                      <%= p.address1 %>
                      <br /> <%= p.city %>, <%= p.state %>
                    <%end%>
                  </h2>
                </div>
                <div class="card-body-a">
                  <div class="price-box d-flex">
                    <span class="price-a">for sale | <%= number_to_currency(p.price) %></span>
                  </div>
                  <%= link_to "Click here to view", property_path(p), class: 'link-a' %>
                    <span class="ion-ios-arrow-forward" style="color: #fff;" ></span>
                  
                </div>
                <div class="card-footer-a">
                  <ul class="card-info d-flex justify-content-around">
                    <li>
                      <h4 class="card-info-title">Area</h4>
                      <span><%= p.area %> sq.ft
                        <sup>2</sup>
                      </span>
                    </li>
                    <li>
                      <h4 class="card-info-title">Beds</h4>
                      <span> <%= p.beds %> </span>
                    </li>
                    <li>
                      <h4 class="card-info-title">Baths</h4>
                      <span> <%= p.baths %> </span>
                    </li>
                    <li>
                      <h4 class="card-info-title">Garages</h4>
                      <span> <%= p.garage %> </span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%end%>
      </div>
    </div>
  </section>
  <!--/ Property End /-->


